# ~/.config/mise/config.toml
# mise (旧 rtx) 設定ファイル

[settings]
# 自動許可を有効にする
trusted_config_paths = ["~/.config/mise"]

# 未解決のバージョンを許可
legacy_version_file = true

# ==================== グローバルツール ====================

[tools]
# ==================== 言語 ====================
node = "22"
python = "3.12"
go = "1.23"
ruby = "3.3"
deno = "latest"
bun = "latest"
java = "21"
dart = "latest"
zig = "latest"

# ==================== Python ツール ====================
poetry = "latest"
uv = "latest"

# ==================== CLI ツール ====================
zellij = "latest"
act = "latest"
rclone = "latest"
yt-dlp = "latest"
yj = "latest"
ripgrep = "latest"

# ==================== インフラ/クラウド ====================
helm = "latest"
grpcurl = "latest"
hasura-cli = "latest"

# ==================== データベース ====================
mongosh = "latest"
postgres = "latest"

# ==================== Flutter ====================
flutter = "latest"

# ==================== 環境設定 ====================

[env]
# mise が管理する PATH 以外の環境変数
MISE_NODE_DEFAULT_PACKAGES_FILE = "~/.config/mise/default-npm-packages"
MISE_PYTHON_DEFAULT_PACKAGES_FILE = "~/.config/mise/default-python-packages"
